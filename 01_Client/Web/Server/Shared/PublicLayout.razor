@inherits LayoutComponentBase

<MudThemeProvider Theme="@_themeManager.Theme" />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="false"
                   DisableBackdropClick="true"
                   NoHeader="false"
                   Position="DialogPosition.TopCenter" />
<MudSnackbarProvider />

<!-- Contenido principal del Layout Público -->
<MudAppBar Color="Color.Primary" Dense="true">
    <MudText Typo="Typo.h6" Class="ml-2">
        Layout Público (Sin Autenticación)
    </MudText>
</MudAppBar>

<MudMainContent>
    <!-- Aquí se inyecta el contenido de las páginas que usen este Layout -->
    @Body
</MudMainContent>

@code {
    // Ejemplo de configuración de theme (opcional)
    private ThemeManagerTheme _themeManager = new ThemeManagerTheme
        {
            // Aquí puedes personalizar colores, tamaño de fuente, etc. si lo deseas.
            // Al mantenerlo separado del layout con Authorize, puedes tener apariencias diferentes.
            Theme = new MudBlazorAdminDashboard(),
            DrawerClipMode = DrawerClipMode.Always,
            FontFamily = "Montserrat",
            DefaultBorderRadius = 6,
            AppBarElevation = 1,
            DrawerElevation = 1
        };
}
